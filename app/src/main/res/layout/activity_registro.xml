<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#061433">

        <EditText
            android:id="@+id/txtdni"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/formulario2"
            android:hint="DNI"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintBottom_toTopOf="@+id/txtnombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </EditText>

        <EditText
            android:id="@+id/txtapellido"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/formulario2"
            android:hint="Apellidos"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtcelular"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/formulario2"
            android:hint="Nro celular"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtcorreo"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/formulario2"
            android:hint="Correo"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtclave"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/formulario2"
            android:hint="Clave"
            android:paddingLeft="40dp"
            android:password="true"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtconfirma"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/formulario2"
            android:hint="Confirmar Clave"
            android:paddingLeft="40dp"
            android:password="true"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <Button
            android:id="@+id/button2"
            android:layout_width="88dp"
            android:layout_height="63dp"
            android:background="#00574B"
            android:text="Cargar Foto"
            android:textColor="#dfd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtconfirma">

        </Button>

        <EditText
            android:id="@+id/txtfoto"
            android:layout_width="220dp"
            android:layout_height="63dp"
            android:layout_marginTop="460dp"
            android:background="@drawable/formulario2"
            android:hint="url foto"
            android:paddingLeft="40dp"
            android:textColor="#000"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/txtnombre"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/formulario2"
            android:hint="Nombre"
            android:paddingLeft="40dp"
            android:textColor="#fff"
            android:textColorHint="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <ImageButton
            android:id="@+id/btnguardar"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_below="@+id/txtpassword"
            android:background="@drawable/btn_guardar"
            app:layout_constraintBottom_toTopOf="@+id/desing"
            app:layout_constraintCircleRadius="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="0.463"></ImageButton>

        <ImageView
            android:id="@+id/desing"
            android:layout_width="420dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_elipse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>